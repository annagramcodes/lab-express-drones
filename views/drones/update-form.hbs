<section class="update-sec">
  <h2 class="update-title">Update drone</h2>
  <form class="update-form" action="/drones/{{_id}}/edit" method="post">
    <div>

      <label for="name">
        Name:
      </label>
      <input type="text" name="name" id="name" value="{{name}}" />
    </div>
    <div>

      <label for="propellers">
        Propellers:
      </label>
      <input
        type="number"
        name="propellers"
        id="propellers"
        value="{{propellers}}"
      />
    </div>
    <div>

      <label for="maxSpeed">
        Speed:
      </label>
      <input
        type="number"
        name="maxSpeed"
        id="maxSpeed"
        min="0"
        max="30"
        value="{{maxSpeed}}"
      />
    </div>
    <div>
      <button class="link-edit update-btn" type="submit">Update Drone</button>
    </div>

  </form>
</section>